extends layout

block content
	a(href="/")
		buttton(class="btn btn-primary") Home
	h1= title
	h3= subtitle
	table(id="myTable")
		thead
			th Customer Number
			th Customer Name
			th Customer Phone
		tbody
			-results.map((row)=>{
				tr
					td #{row.customerNumber}
					td #{row.customerName}
					td #{row.phone}
			-})
	h3 Add a new Entry
	form(action="" id= id)
		input(type="text" placeholder="customer number")
		input(type="text" placeholder="customer name")
		input(type="text" placeholder="phone")
		input(type="text" placeholder="image")
		button(type="submit" class="btn btn-primary") Submit
